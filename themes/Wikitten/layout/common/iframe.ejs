<% if (!index) { %>
    <script type="text/javascript">
        $("#profile").remove();
        $(function(){
            $("#profile").remove();
            $("#sidebar").remove();
        });
    </script>  
<% } %>
<style>
section#main, article#<%= post.layout %>-<%= post.slug %>, .article-inner, .article-inner iframe {
    width: 100%;
    height: 100%;
}
#container > .outer {
    margin-bottom: 80px !important;
    height: 100%;
}
iframe#embed_iframe {
    background-color: rgba(255,255,255,0.8);
}
</style>
<article id="<%= post.layout %>-<%= post.slug %>" class="article article-type-<%= post.layout %>" itemscope>
    <div class="article-inner">
        <iframe id="embed_iframe" src="<%= post.iframe_url ? post.iframe_url : './embed_page/' %>"></iframe>
    </div>
</article>
